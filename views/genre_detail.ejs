<%- include('head'); -%>

<div class="container-fluid">
  <div class="row">
    <%- include('sidenav'); -%>
    <div class="col-sm-10">
      <h1>Genre <%= genre.name %></h1>

      <div style="margin-left: 20px; margin-top: 20px">
        <h4>Books</h4>
        <dl>
          <% if (genre_books.length > 0) {%> <% for (let i = 0; i <
          genre_books.length; i++) { %>
          <dt>
            <a href="<%=genre_books[i].url%>"><%=genre_books[i].title%></a>
          </dt>
          <dd><%= genre_books[i].summary %></dd>
          <% } %> <% } else {%>
          <p>This genre has no books</p>
          <% } %>
        </dl>
      </div>
    </div>
  </div>
</div>

<%- include('footer'); -%>
