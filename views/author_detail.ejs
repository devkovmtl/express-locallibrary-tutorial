<%- include('head'); -%>

<div class="container-fluid">
  <div class="row">
    <%- include('sidenav'); -%>
    <div class="col-sm-10">
      <h1>Author: <%= author.name %></h1>
      <p>
        <%= author.date_of_birth_formatted %> - <%=
        author.date_of_death_formatted %>
      </p>
      <div class="margin-left:20px; margin-top:20px">
        <h4>Books</h4>
        <dl>
          <% for(let i = 0; i < authors_books.length; i++) { %>
          <dt>
            <a href="<%=authors_books[i].url%>"><%=authors_books[i].title%></a>
          </dt>
          <dd><%= authors_books[i].book.summary%></dd>
          <% } %>
        </dl>
        <hr />
        <p>
          <a href="<%=author.url + '/delete' %>">Delete author</a>
        </p>
      </div>
    </div>
  </div>
</div>

<%- include('footer'); -%>
