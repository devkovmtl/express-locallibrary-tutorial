<%- include('head'); -%>

<div class="container-fluid">
  <div class="row">
    <%- include('sidenav'); -%>
    <div class="col-sm-10">
      <h1><%= title %></h1>
      <form method="POST">
        <div class="form-group">
          <label for="first_name">First Name: </label>
          <input
            type="text"
            id="first_name"
            name="first_name"
            class="form-control"
            placeholder="First Name"
            required
            value="<%= author && author.first_name ? author.first_name: ''  %>"
          />
        </div>
        <div class="form-group">
          <label for="family_name">Family Name: </label>
          <input
            type="text"
            id="family_name"
            name="family_name"
            class="form-control"
            required
            placeholder="Family Name"
            value="<%= author && author.family_name ? author.family_name: ''  %>"
          />
        </div>

        <div class="form-group">
          <label for="date_of_birth">Date of birth:</label>
          <input
            type="date"
            class="form-control"
            id="date_of_birth"
            name="date_of_birth"
            value="<%= author && author.date_of_birth ? author.date_of_birth : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="date_of_birth">Date of death:</label>
          <input
            type="date"
            class="form-control"
            id="date_of_death"
            name="date_of_death"
            value="<%= author && author.date_of_death ? author.date_of_death : '' %>"
          />
        </div>

        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
      <% if(errors && errors.length > 0) {%>
      <ul>
        <% for (let i=0; i < errors.length; i++) { %>
        <li><%= errors[i].msg %></li>
        <% } %>
      </ul>
      <% } %>
    </div>
  </div>
</div>

<%- include('footer'); -%>
